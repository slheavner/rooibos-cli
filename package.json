{
  "name": "rooibos-cli",
  "version": "1.4.0",
  "description": "cli for rooibos testing framework, for brightscript, brighterscript and scenegraph apps",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/**/!(*.spec.*)*"
  ],
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "brs": "latest",
    "commander": "latest",
    "debug": "latest",
    "es2015": "0.0.0",
    "fs-extra": "^5.0.0",
    "glob-all": "^3.1.0",
    "lodash": "latest",
    "replace-ext": "^1.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "splice-string": "^2.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-subset": "^1.3.1",
    "@types/debug": "0.0.31",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/jest": "^27.0.0",
    "@types/lodash": "^4.14.119",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.17.60",
    "@types/replace-ext": "0.0.27",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "chai-subset": "^1.6.0",
    "codecov": "^3.1.0",
    "compare-directories": "^0.1.0",
    "dir-compare": "^1.4.0",
    "mocha": "^5.1.1",
    "nyc": "^13.1.0",
    "ts-node": "8.0.2",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-origin-ordered-imports-rule": "^1.1.2",
    "typescript": "^3.9.9"
  },
  "scripts": {
    "clean": "rm -rf ./dist && mkdir dist",
    "compile": "npm run clean && tsc -p .",
    "prepublishOnly": "npm run build",
    "tslint": "tslint ./src/**/*.ts",
    "build": "npm run compile && cp ./src/lib/*.brs dist/lib && cp ./src/lib/*.xml dist/lib",
    "test": "npm run build && nyc mocha src/**/*.spec.ts --full-trace --bail",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "publish-npm": "npm run test && npm publish",
    "publish-npm:beta": "npm run test && npm publish --tag=beta"
  },
  "preferGlobal": true,
  "bin": {
    "rooibos-cli": "dist/cli.js"
  },
  "keywords": [
    "brightscript",
    "scenegraph",
    "roku",
    "rooibos",
    "preprocessor"
  ],
  "author": "George Cook",
  "license": "ISC",
  "watch": {
    "test": {
      "extensions": "ts",
      "patterns": [
        "src"
      ]
    }
  },
  "nyc": {
    "include": [
      "src/**/!(*.spec).ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": true,
    "lines": 5,
    "statements": 5,
    "functions": 5,
    "branches": 5
  }
}
